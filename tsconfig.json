{
  "compilerOptions": {
	"target": "es5",
	"baseUrl": ".",
	"lib": [
	  "dom",
	  "dom.iterable",
	  "esnext"
	],
	"allowJs": true,
	"checkJs": true,
	"skipLibCheck": true,
	"strict": false,
	"forceConsistentCasingInFileNames": true,
	"noEmit": true,
	"incremental": true,
	"esModuleInterop": true,
	"module": "esnext",
	"moduleResolution": "node",
	"resolveJsonModule": true,
	"isolatedModules": true,
	"jsx": "preserve",
	"paths": {
	  "@/components/*": [
		"components/*"
	  ],
	  "@/lib/*": [
		"lib/*"
	  ],
	  "@/pages/*": [
		"pages/*"
	  ],
	  "@/public/*": [
		"public/*"
	  ],
	  "@/styles/*": [
		"styles/*"
	  ],
	  "@/utils/*": [
		"utils/*"
	  ]
	}
  },
  "include": [
	"next-env.d.ts",
	"**/*.ts",
	"**/*.tsx"
  ],
  "exclude": [
	"node_modules"
  ]
}
